<UserControl x:Class="KvantCard.View.Students.StudentsMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KvantCard.View.Students"
             xmlns:transiс="clr-namespace:Transitionals.Controls;assembly=Transitionals"
             xmlns:transitions="clr-namespace:Transitionals.Transitions;assembly=Transitionals"
             xmlns:listAddEdit="clr-namespace:KvantControls.ListAddEdit;assembly=KvantControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid">

        <listAddEdit:ListAddEdit HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <listAddEdit:ListAddEdit.List>
                <local:StudentsList HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </listAddEdit:ListAddEdit.List>
            <listAddEdit:ListAddEdit.AddEdit>
                <local:StudentAddEdit HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </listAddEdit:ListAddEdit.AddEdit>
        </listAddEdit:ListAddEdit>

    </Grid>
</UserControl>
